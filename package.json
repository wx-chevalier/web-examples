{
  "name": "create-react-boilerplate",
  "version": "0.0.14",
  "description": "scaffold for creating engineering react project with optional redux, mobx, etc. ",
  "author": "wxyyxc1992",
  "license": "MIT",
  "homepage": "https://github.com/wxyyxc1992/create-react-boilerplate",
  "repository": {
    "type": "git",
    "url": "https://github.com/wxyyxc1992/create-react-boilerplate"
  },
  "keywords": [
    "boilerplate",
    "live",
    "hot",
    "reload",
    "react",
    "reactjs",
    "hmr",
    "edit",
    "webpack",
    "babel",
    "react-transform",
    "PostCSS(FlexBox Polyfill)"
  ],
  "main": "index.js",
  "bin": {
    "crb": "./index.js"
  },
  "scripts": {
    "precommit": "lint-staged",
    "start": "better-npm-run start:dll && better-npm-run start:dev",
    "build": "npm run clean && better-npm-run build",
    "build:ssr": "npm run clean && better-npm-run build:ssr && better-npm-run build:server",
    "clean": "rimraf dist",
    "lint": "eslint src",
    "update": "npm-check -u",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "betterScripts": {
    "start:dll": {
      "command": "./node_modules/.bin/webpack  --config ./dev-config/webpack.dll.config.js",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "start:dev": {
      "command": "webpack-dashboard -- node --harmony ./dev-config/server/devServer.js --host 0.0.0.0",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "build": {
      "command": "./node_modules/.bin/webpack --config ./dev-config/webpack.config.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "build:ssr": {
      "command": "./node_modules/.bin/webpack --config ./dev-config/webpack.config.js",
      "env": {
        "NODE_ENV": "ssr"
      }
    },
    "build:server": {
      "command": "./node_modules/.bin/webpack --config ./dev-config/webpack.server.config.js",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": ["prettier --single-quote --write", "git add"]
  },
  "eslintConfig": {
    "extends": "./dev-config/tool/eslint.js"
  },
  "babel": {
    "extends": "./dev-config/tool/.babelrc"
  },
  "jest": {
    "moduleFileExtensions": ["js", "jsx"],
    "moduleDirectories": ["node_modules", "bower_components", "shared"],
    "moduleNameMapper": {
      "\\.(css|less|scss)$": "<rootDir>/__mocks__/styleMock.js",
      "\\.(gif|ttf|eot|svg)$": "<rootDir>/__mocks__/fileMock.js"
    }
  },
  "devDependencies": {
    "@kadira/storybook": "^2.21.0",
    "@storybook/react": "^3.1.7",
    "autoprefixer": "7.1.1",
    "babel-core": "6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-async-to-promises": "^1.0.5",
    "babel-plugin-dynamic-import-node": "1.0.2",
    "babel-plugin-import": "1.2.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.5.2",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.24.1",
    "better-npm-run": "^0.0.15",
    "bundle-loader": "^0.5.5",
    "chai": "4.0.2",
    "chalk": "^2.0.1",
    "commander": "^2.10.0",
    "copy-webpack-plugin": "^4.0.1",
    "cross-spawn": "5.1.0",
    "css-loader": "0.28.4",
    "cssnano": "^3.10.0",
    "eslint": "^4.1.1",
    "eslint-loader": "^1.8.0",
    "eslint-plugin-babel": "^4.1.1",
    "eslint-plugin-jest": "^20.0.3",
    "eslint-plugin-react": "^7.1.0",
    "express": "4.15.3",
    "extract-text-webpack-plugin": "3.0.0-beta.3",
    "file-loader": "0.11.2",
    "fs-extra": "3.0.1",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.29.0",
    "image-webpack-loader": "3.3.1",
    "imagemin": "5.3.1",
    "install": "0.10.1",
    "less": "^2.7.2",
    "less-loader": "^4.0.4",
    "mocha": "3.4.2",
    "nock": "^9.0.13",
    "node-sass": "4.5.3",
    "object-assign": "^4.1.1",
    "offline-plugin": "4.8.1",
    "postcss-flexibility": "2.0.0",
    "postcss-loader": "^2.0.6",
    "prepack-webpack-plugin": "^1.1.0",
    "raw-loader": "^0.5.1",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-komposer": "^2.0.0",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.6",
    "scss-loader": "^0.0.1",
    "stack-source-map": "^1.0.6",
    "style-loader": "0.18.2",
    "underscore-template-loader": "^0.7.3",
    "url-loader": "0.5.9",
    "wasm-loader": "^1.0.0",
    "webpack": "^3.0.0",
    "webpack-bundle-analyzer": "2.8.2",
    "webpack-dashboard": "0.4.0",
    "webpack-dev-server": "^2.5.0"
  },
  "dependencies": {
    "antd": "^2.11.2",
    "es6-promise": "^4.1.1",
    "fluent-fetcher": "^0.2.8",
    "husky": "^0.14.3",
    "jquery": "^3.2.1",
    "lint-staged": "^4.0.1",
    "mobx": "^3.1.16",
    "mobx-react": "4.2.1",
    "prettier": "^1.5.2",
    "prop-types": "15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-helmet": "5.1.3",
    "react-loadable": "^4.0.3",
    "react-redux": "5.0.5",
    "react-router": "^4.1.1",
    "react-router-dom": "^4.1.1",
    "react-tap-event-plugin": "^2.0.1",
    "redux": "^3.7.1",
    "redux-form": "6.8.0",
    "redux-promise": "^0.5.3",
    "redux-thunk": "^2.2.0",
    "styled-components": "^2.1.0"
  }
}
